
<section>
  <div class="py-8 px-6 text-center">
    <p class="text-lg mb-6">
        <%= @company.description %>
    </p>
  </div>
  <div class="p-6 min-h-screen">
    <h2 class="text-2xl font-bold text-center mb-8 text-gray-800">Choose a Coaching Program</h2>
    <div></div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @company.coaching_programs.each do |coaching_program| %>
        <div class="bg-white p-6 rounded-lg shadow hover:shadow-lg transition-shadow duration-200">
          <h3 class="text-xl font-semibold text-gray-800"><%= coaching_program.name %></h3>
          <p class="text-gray-600 mt-2"><%= truncate(coaching_program.description, length: 300) %></p>
          <div class="flex justify-between items-center">
              <div class="flex space-x-4 w-full">
                <a href=<%=company_program_path(@company.slug, coaching_program)%> class="text-green-600 py-2 rounded hover:underline hover:cursor-pointer mt-4">
                  Know More
                </a>
              </div>
              <button class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 mt-4 whitespace-nowrap">
                Select Program
              </button>
          </div>
        </div>
      <% end %>
    </div>
    
  </div>
</section>
