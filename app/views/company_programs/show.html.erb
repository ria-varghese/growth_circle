<h1 class="text-center py-6 text-2xl font-semibold">
  "<%= @program.name %>" Coaching Program
</h1>

<div class="py-8 px-6 text-center">
    <p class="text-lg mb-6">
        <%= @program.description || "No description available" %>
    </p>
</div>

<section class="py-4 px-4 flex flex-col">
  <h2 class="text-2xl font-bold text-center text-gray-800 mb-8">Meet Your Coaches</h2>
    
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @coaches.each do |coach| %>
      <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
        <div class="text-center">
          <h3 class="text-xl font-semibold text-gray-800"><%= coach.name %></h3>
          <p class="text-sm text-gray-500"><%= coach.email %></p>
        </div>
      </div>
    <% end %>
  </div>
</section>
